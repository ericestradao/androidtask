<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="43dp"
            android:layout_y="13dp"
            android:background="#000000"
            android:text="Email address"
            android:textColor="#FFFFFF"
            android:textSize="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="42dp"
            android:layout_y="101dp"
            android:background="#000000"
            android:text="Create password"
            android:textColor="#FFFFFF"
            android:textSize="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="44dp"
            android:layout_y="197dp"
            android:background="#000000"
            android:text="Repeat password"
            android:textColor="#FFFFFF"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="44dp"
            android:layout_y="54dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="23dp"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="192dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="42dp"
            android:layout_y="144dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="23dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="331dp" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="42dp"
            android:layout_y="236dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="23dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="331dp" />

        <Button
            android:id="@+id/next"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_x="22dp"
            android:layout_y="449dp"
            android:background="@drawable/degradado"
            android:onClick="next"
            android:text="Next"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="586dp"
            />

        <TextView
            android:id="@+id/warning"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_x="14dp"
            android:layout_y="308dp"
            android:background="#000000"
            android:ems="10"
            android:text="Your password should have a minimum of 8\ncharacters and contain at least one\nnumber, one uppercase and one lower\ncase letter. You can use especual characters."
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="414dp" />

        <TextView
            android:id="@+id/warningpass"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_x="44dp"
            android:layout_y="276dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="277dp"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:background="#000000"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/warningmail"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_x="44dp"
            android:layout_y="376dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="277dp"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:background="#000000"
            android:visibility="gone"/>

    </AbsoluteLayout>

</android.support.constraint.ConstraintLayout>